{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "onsave",
      "type": "shell",
      "command": "bash .vscode/onsave.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [],
  "triggers": {
    "onFileSave": {
      "globPattern": "{**/.*,**/*}"
    }
  }
}
